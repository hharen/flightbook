<%= form_with(model: flight) do |form| %>
  <% if flight.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(flight.errors.count, "error") %> prohibited this flight from being saved:</h2>

      <ul>
        <% flight.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :duration, style: "display: block" %>
    <%= form.number_field :duration, step: 0.1, min: 0, placeholder: "Duration in minutes" %>
  </div>

  <div>
    <%= form.label :note, style: "display: block" %>
    <%= form.text_area :note, placeholder: "Optional note about this flight", rows: 4, cols: 50 %>
  </div>

  <div>
    <%= form.label :flying_session_id, "Flying Session", style: "display: block" %>
    <%= form.select :flying_session_id,
        options_from_collection_for_select(
          FlyingSession.includes(:user, :instructor),
          :id,
          -> (session) {
            session_date = session.date_time.to_date
            instructor_name = session.instructor&.name || "No instructor"
            "#{session_date.day.ordinalize} of #{session_date.strftime('%B %Y')} - #{session.date_time.strftime('%R')} with #{instructor_name} (#{session.user.name})"
          },
          flight.flying_session_id
        ),
        { prompt: "Select a flying session" },
        { class: "form-select" }
    %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
