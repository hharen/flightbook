<p style="color: green"><%= notice %></p>

<% content_for :title, "Users" %>

<h1>Users</h1>

<div class="table-container">
  <table class="data-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Sessions</th>
        <th>Total flight time</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td>
            <%= link_to "#{user.flying_sessions.count} sessions", user_flying_sessions_path(user), 
                        class: "btn btn-small btn-primary" %>
          </td>
          <td>
            <% total_time = user.total_flight_time %>
            <% if total_time > 0 %>
              <strong><%= (total_time / 60.0).round(1) %> hrs</strong>
              <br>
              <span class="text-muted">(<%= total_time %> min)</span>
            <% else %>
              <span class="text-muted">No flights</span>
            <% end %>
          </td>
          <td class="actions">
            <%= link_to "Show", user, class: "btn btn-small" %>
            <%= link_to "Edit", edit_user_path(user), class: "btn btn-small" %>
            <%= link_to "Delete", user_path(user), method: :delete, 
                        confirm: "Are you sure?", class: "btn btn-small btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New user", new_user_path %>
